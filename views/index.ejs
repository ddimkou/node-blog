<div class="author">
  <h1 class="author__heading">Hello</h1>
  <p class="author__body">Web Developer and contenct creator</p>
</div>

<img src="/img/hero-image.webp" alt="blog image" />

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/posts/<%= post._id %>"
        ><span><%= post.title %></span>
        <span class="articles-list__date"
          ><%= post.createdAt.toDateString() %></span
        ></a
      >
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts</a>

  <% } %>
</section>
